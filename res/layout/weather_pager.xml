<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/temp_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="25dp"
        android:text="day"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/weather_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/temp_day"
        android:layout_below="@+id/temp_day"
        android:layout_marginTop="5dp"
        android:text="day wea"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/wind_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/weather_day"
        android:layout_below="@+id/weather_day"
        android:layout_marginTop="5dp"
        android:text="wind_day"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/update_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/refresh_button"
        android:layout_below="@+id/wind_day"
        android:layout_marginTop="20dp"
        android:text="update_time"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:onClick="refresh"
        android:text="Refresh" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_below="@+id/update_time_text"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/temp_day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/weather_day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day wea"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/temp_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/weather_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day wea"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/temp_day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/weather_day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day wea"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/date3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/temp_day4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/weather_day4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day wea"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/date4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/temp_day5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/weather_day5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day wea"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/date5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>